<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MenuFrament">

    <fragment
        android:id="@+id/MenuFrament"
        android:name="com.example.dartapp.MenuFrament"
        android:label="@string/menu_fragment_label"
        tools:layout="@layout/fragment_menu">

        <action
            android:id="@+id/action_MenuFragment_to_ModiFragment"
            app:destination="@id/ModeFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_MenuFrament_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>
    <fragment
        android:id="@+id/ModeFragment"
        android:name="com.example.dartapp.ModeFragment"
        android:label="@string/modes_fragment_label"
        tools:layout="@layout/fragment_modes" >
        <action
            android:id="@+id/action_ModeFragment_to_trainingActivity"
            app:destination="@id/trainingActivity"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <activity
        android:id="@+id/trainingActivity"
        android:name="com.example.dartapp.TrainingActivity"
        android:label="TrainingActivity" >
        <argument
            android:name="mode"
            app:argType="string"
            android:defaultValue='"501"' />
    </activity>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.dartapp.HistoryFragment"
        android:label="HistoryFragment" />
</navigation>